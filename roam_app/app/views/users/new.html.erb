<h1> Sign Up </h1>
<div class="form">
<%= form_for :user, url: '/users', method: :post do |f| %>
  Name: <%= f.text_field :name %> <br>
  Email: <%= f.text_field :email %> <br>
  Age: <%= f.text_field :age %> <br>
  Bio: <%= f.text_field :bio %> <br>
  Password: <%= f.password_field :password %> <br>
  Password Confirmation: <%= f.password_field :password_confirmation %> <br>
  <%= f.submit "Sign Up" %>
<% end %>
</div>

<!-- Add facebook and google sign in  -->
<br>
<%= link_to "Sign Up with your Google Account", '/auth/google_oauth2' %>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
